<h1><%=@user.fname %></h1>
<% if current_user == nil %>
<% elsif @user.id == current_user.id %>

<a href="/users/edit">Edit Your Profile</a>

<%= form_for @post do |f| %>
  <%= f.label :message %>
  <br>
  <%= f.text_area :body %>
  <br>
  <%=f.submit :Post %>
<% end %>

<% end %>

<h1> <%= @user.fname %>'s Posts</h1>
<ul>
<% @posts.each do |post| %>
  <li>
    <a href="/posts/<%=post.id%>">
      <%= post.body %>
    </a>
    <br>
    <%= post.created_at.strftime("%B %d, %Y at %I:%M %p") %>
  </li>
  <% end %>

</ul>
